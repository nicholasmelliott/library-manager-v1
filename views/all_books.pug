extends layout

block content
  h1= title
  include book_header.pug
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in books
        tr
          td
            a(href=`/books/details/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.first_published