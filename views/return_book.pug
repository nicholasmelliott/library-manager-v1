extends layout

block content
  h1 Patron: Return Book
  each loan in loans
    p
      strong Book Title: 
      | #{loan.books.title}
    p
      strong Loaned By: 
      | #{loan.patrons.first_name + "  " + loan.patrons.last_name}
    p
      strong Loaned On: 
      | #{loan.loaned_on}
    p
      strong Return By: 
      | #{loan.return_by}
    form(action="/books/return/" + loan.id + "?_method=PUT", method="post")
      p
        label(for='returned_on') Returned on:
        input(type='text', name='returned_on' value=date required)
      p
        input(type='submit', value='Return Book')
