extends layout

block content
  h1 Book: #{books.title}
  form(action="/books/details/" + books.id+ "?_method=PUT", method="post")
    p
      label(for='title') Title
      input(type='text', name='title' value=`${books.title}`)
    p
      label(for='author') Author
      input(type='text', name='author', value=`${books.author}`)
    p
      label(for='genre') Genre
      input(type='text', name='genre', value=`${books.genre}`)
    p
      label(for='first_published') First Published
      input(type='text', name='first_published', value=`${books.first_published}`)
    p
      input(type='submit' value='Update')
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron 
        th Loaned on
        th Return by 
        th Returned on
        th Action
    tbody
      each loan in loans
        tr
          td
            a(href=`/books/details/${loan.book_id}`)= loan.books.title
          td
            a(href=`/patrons/details/${loan.patron_id}`)= loan.patrons.first_name + " " + loan.patrons.last_name
          td= loan.loaned_on
          td= loan.return_by
          td= loan.returned_on
          if !loan.returned_on
            td
              a.button(href=`/books/return/${loan.book_id}`) Return Book
