extends layout

block content
  h1= "Patron:" + patrons.first_name + " " + patrons.last_name
  form
    p
      label(for='first_name') First Name
      input#first_name(type='text', value=`${patrons.first_name}`)
    p
      label(for='last_name') Last Name
      input#last_name(type='text', value=`${patrons.last_name}`)
    p
      label(for='address')  Address
      input#address(type='text', value=`${patrons.address}`)
    p
      label(for='email') Email
      input#email(type='text', value=`${patrons.email}`)
    p
      label(for='library_id') Library ID
      input#library_id(type='text', value=`${patrons.library_id}`)
    p
      label(for='zip_code') Zip Code
      input#zip_code(type='text', value=`${patrons.zip_code}`)
    p
      input(type='submit', value='Update')
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron 
        th Loaned on
        th Return by 
        th Returned on
        th Action
    tbody
      each loan in loans
        tr
          td
            a(href=`/books/details/${loan.book_id}`)= loan.books.title
          td
            a(href=`/patrons/details/${loan.patron_id}`)= loan.patrons.first_name + " " + loan.patrons.last_name
          td= loan.loaned_on
          td= loan.return_by
          td= loan.returned_on
          if !loan.returned_on
            td
              a.button(href=`/books/return/${loan.book_id}`) Return Book